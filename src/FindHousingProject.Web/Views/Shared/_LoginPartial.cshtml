@using Microsoft.AspNetCore.Identity
@using FindHousingProject.DAL.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
    <li class="nav-item">

        <!-- <a class="nav-link text-dark" asp-area="" asp-page="/user" title="Manage">@User.Identity.Name!</a> -->

        <form class="form-inline" asp-area="" asp-controller="User" asp-action="Profile">
            <button type="submit" class="nav-link btn btn-link text-dark">@User.Identity.Name</button>
        </form>


    </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="LogOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="SignIn">Sign In</a>
        </li>
    }
</ul>
