@model FindHousingProject.Web.ViewModels.CreateHousingViewModel

@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>
<div>
    <h4>@Model.Name</h4>
    <input type="hidden" asp-for="Id" />
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PricePerDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePerDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div class="profile">
    <div class="info">
        <p class="name"><a>Description: </a>@Model.Description</p>
    </div>
    <div class="Scenery">
        @if (Model.Scenery != null)
        {
            <img style='max-width:160px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Scenery))">
        }
        else
        {
            <img src="https://secure.gravatar.com/avatar/?s=64&d=https%3A%2F%2Fvidnova.dental%2Fwp-content%2Fthemes%2Fvidnova%2Fpublic%2Fimages%2Fdefault_avatar.jpg&r=g">
        }
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    <script src="~/js/app.js" asp-append-version="true"></script>
}
